{
  "name": "short.is",
  "private": true,
  "description": "Alan Shortis is a web developer.",
  "version": "3.0.0",
  "author": "Alan Shortis",
  "repository": {
    "type": "git",
    "url": "https://github.com/alanshortis/short.is"
  },
  "scripts": {
    "dev": "npm run clean && concurrently \"eleventy --serve --quiet\" \"npm run dev:css\" \"npm run dev:js\"",
    "dev:js": "webpack --env.NODE_ENV=development",
    "dev:css": "sass src/scss/style.scss src/style.css --watch",
    "build": "npm run build:css && npm run build:js && eleventy --quiet",
    "build:js": "webpack --env.NODE_ENV=production",
    "build:css": "sass src/scss/style.scss src/style.css --style=compressed --no-source-map",
    "clean": "rm -rf dist && rm -rf src/assets",
    "newpost": "node newpost.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "concurrently": "^5.3.0",
    "dotenv-safe": "^8.2.0",
    "html-minifier": "^4.0.0",
    "node-fetch": "^2.6.1",
    "prompts": "^2.3.2",
    "request-promise": "^4.2.6",
    "sass": "^1.27.0",
    "simple-git": "^2.21.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "xml-js": "^1.6.11"
  }
}
