{
  "name": "short.is",
  "author": "Alan Shortis",
  "description": "Alan Shortis is a Web Developer.",
  "version": "3.0.0",
  "scripts": {
    "build": "npm run sass:prod && eleventy",
    "dev": "concurrently \"eleventy --serve --quiet\" \"npm run sass:dev\"",
    "sass:dev": "sass --watch src/scss/style.scss src/css/style.css",
    "sass:prod": "sass --style=compressed --no-source-map src/scss/style.scss src/css/style.css",
    "clean": "rm -rf dist",
    "new-post": "node new-post.js"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "dotenv-safe": "^8.2.0",
    "node-fetch": "^2.6.0",
    "prompts": "^2.3.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "sass": "^1.26.10",
    "simple-git": "^2.8.0",
    "xml-js": "^1.6.11"
  }
}
