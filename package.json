{
  "name": "short.is",
  "author": "Alan Shortis",
  "description": "Alan Shortis is a Web Developer.",
  "version": "3.0.0",
  "scripts": {
    "dev": "npm run clean && concurrently \"eleventy --serve --quiet\" \"npm run dev:sass\" \"npm run dev:js\"",
    "dev:sass": "sass src/scss/style.scss src/assets/css/style.css --watch",
    "dev:js": "webpack --env.NODE_ENV=development",
    "build": "npm run build:sass && npm run build:js && eleventy --quiet",
    "build:sass": "sass src/scss/style.scss src/assets/css/style.css --style=compressed --no-source-map ",
    "build:js": "webpack --env.NODE_ENV=production",
    "clean": "rm -rf dist && rm -rf src/assets",
    "new-post": "node new-post.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-preset-minify": "^0.5.1",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "dotenv-safe": "^8.2.0",
    "node-fetch": "^2.6.1",
    "prompts": "^2.3.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "sass": "^1.26.10",
    "simple-git": "^2.8.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "xml-js": "^1.6.11"
  }
}
