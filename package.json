{
  "name": "short.is",
  "author": "Alan Shortis",
  "description": "Alan Shortis is a Web Developer.",
  "version": "3.0.0",
  "scripts": {
    "build": "npm run css:prod && eleventy",
    "dev": " npm run css:dev & eleventy --serve --quiet",
    "clean": "rm -rf dist",
    "css:dev": "postcss ./src/css/*.pcss -o ./src/css/style.css --map --watch --verbose",
    "css:prod": "postcss ./src/css/*.pcss -o ./src/css/style.css --no-map --verbose --env='production'",
    "new-post": "node new-post.js"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "chalk": "^4.1.0",
    "cssnano": "^4.1.10",
    "dotenv-safe": "^8.2.0",
    "node-fetch": "^2.6.0",
    "postcss-cli": "^7.1.1",
    "postcss-preset-env": "^6.7.0",
    "prompts": "^2.3.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "simple-git": "^2.8.0",
    "xml-js": "^1.6.11"
  }
}
