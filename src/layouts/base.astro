---
import '../styles/global.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <link rel="preload" href="/fonts/safiro-bold.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/safiro-bolditalic.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/safiro-medium.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/safiro-mediumitalic.woff2" as="font" type="font/woff2" crossorigin />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
