{% extends 'layouts/main.njk' %}

{% block content %}
  <time datetime={{ date }}>{{ date | formatDate }}</time>
  <h1>{{ title }}</h1>

  {{ content | safe }}

  {% set previousPost = collections.daily | getPreviousCollectionItem(page) %}
  {% set nextPost = collections.daily | getNextCollectionItem(page) %}

  {% if previousPost %}Older<a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>{% endif %}
  {% if nextPost %}Newer<a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>{% endif %}
{% endblock %}

