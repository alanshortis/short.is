{% extends 'layouts/main.njk' %}

{% block content %}
  {% if date | dateDiff > 731 %}
    <mark>OLD POST</mark>
  {% endif %}

  <p>
    <span class="sr-only">Posted on:
    </span>
    <time datetime="{{ date }}">{{ date | formatDate }}</time>
  </p>
  <h1>{{ title }}</h1>
  <p>{{ intro }}</p>

  {{ content | safe }}

  {% set collection = collections.writing %}
  {% include 'nextprev.njk' %}
{% endblock %}
