{% extends 'layouts/main.njk' %}

{% block content %}
  <p>{{ page.date }}</p>
  <h1>{{ title }}</h1>
  <p>{{ intro }}</p>

  {{ content | safe }}

  {% set previousPost = collections.writing | getPreviousCollectionItem(page) %}
  {% set nextPost = collections.writing | getNextCollectionItem(page) %}

  {% if previousPost %}Older<a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>{% endif %}
  {% if nextPost %}Newer<a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>{% endif %}
{% endblock %}
