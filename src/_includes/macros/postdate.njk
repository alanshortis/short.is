{% macro postDate(date, updated) %}
  <p class="label post-content__date">
    <time datetime="{{ date }}">{{ date | formatDate }}</time>
    {# TODO: Update diff time #}
    {%- if (updated | dateDiff < 300) %}
      <span> | Updated</span>
    {%- elif (date | dateDiff < 300) %}
      <span> | New</span>
    {%- endif %}
  </p>
{% endmacro %}
