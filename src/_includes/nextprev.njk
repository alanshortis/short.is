{% set previousPost = collections.writing | getPreviousCollectionItem(page) %}
{% set nextPost = collections.writing | getNextCollectionItem(page) %}

{%- if previousPost %}
  <a class="post-content__nav post-content__nav--prev" href="{{ previousPost.url }}">
    <span class="label arrow--left">Older</span>
    <p class="h4">{{ previousPost.data.title }}</p>
  </a>
{%- endif %}
{%- if nextPost %}
  <a class="post-content__nav post-content__nav--next" href="{{ nextPost.url }}">
    <span class="label arrow--right">Newer</span>
    <p class="h4">{{ nextPost.data.title }}</p>
  </a>
{%- endif %}
