<nav>
  <p class="sr">More posts</p>
  <ul>
    {% set previousPost = collection | getPreviousCollectionItem(page) %}
    {% set nextPost = collection | getNextCollectionItem(page) %}

    {% if previousPost %}
      <li>
        <a href="{{ previousPost.url }}">
          Older<span class="sr">post</span>
          {{ previousPost.data.title }}
        </a>
      </li>
    {% endif %}
    {% if nextPost %}
      <li>
        <a href="{{ nextPost.url }}">
          Newer<span class="sr">post</span>
          {{ nextPost.data.title }}
        </a>
      </li>
    {% endif %}
  </ul>
</nav>
