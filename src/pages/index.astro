---
import { getCollection } from 'astro:content';
import Base from '../layouts/base.astro';
import { Circles, PostBox, ReadingList } from '../components';

const RECENT_WRITING_COUNT = 4;
const collection = await getCollection('posts');
const latestPosts = collection
  .filter(post => post.data.published ?? true)
  .sort((a, b) => b.data.pubDate.localeCompare(a.data.pubDate))
  .slice(0, RECENT_WRITING_COUNT);
---

<Base pageTitle="Alan Shortis" description="My name is Alan Shortis and I am a web engineer">
  <div class="home">
    <Circles />
    <div>
      <h1 class="home__title">My name is Alan Shortis and I am a web engineer</h1>
      <div class="home__posts">
        {latestPosts.map((post, idx) => <PostBox post={post} />)}
      </div>
      <a href="/writing" class="home__link">More writing &rarr;</a>
    </div>
    <ReadingList />
  </div>
</Base>

<style lang="scss">
  @use '../styles/mixins' as *;

  .home {
    display: flex;
    flex-direction: column;
    gap: calc(var(--step-5) * 2);
    &__title {
      font-size: var(--step-2);
      font-weight: bold;
      line-height: 1.305;
      margin-block-end: var(--step-5);
      text-wrap: balance;
    }
    &__posts {
      display: grid;
      gap: var(--space);
      grid-template-columns: repeat(2, 1fr);
      grid-auto-rows: 1fr;
      @include small {
        grid-template-columns: 1fr;
      }
    }
    &__link {
      display: inline-block;
      margin-block-start: var(--space--large);
      @include label;
    }
  }
</style>
