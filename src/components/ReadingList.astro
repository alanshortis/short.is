---
import { getCollection } from 'astro:content';

const collection = await getCollection('reading');
const recentReading = collection.slice(0, 7);
---

<div class="reading">
  <h2 class="reading__title">Recent reading</h2>
  <div class="list">
    {
      recentReading.map(post => (
        <article class="article">
          <a class="article__item" href={post.data.slug} target="_blank" rel="noopener noreferrer">
            <h1 class="article__title">{post.data.title}</h1>
            <p class="article__author">{post.data.author}</p>
          </a>
        </article>
      ))
    }
  </div>
  <a href="/reading" class="reading__more">More reading &rarr;</a>
</div>

<style lang="scss">
  @use '../styles/mixins' as *;

  .reading {
    border: 1px solid var(--divider);
    border-radius: var(--radius--large);
    display: flex;
    flex-direction: column;
    gap: var(--space--large);
    margin-left: 0;
    overflow: hidden;
    padding-block: var(--space);
    position: relative;
    width: 100%;
    @include small {
      border: 0;
      @include full-bleed;
    }
    &::after {
      background-image: linear-gradient(to right, transparent, var(--background));
      content: '';
      height: 100%;
      inset-block-start: 0;
      inset-inline-end: 0;
      pointer-events: none;
      position: absolute;
      width: var(--space--large);
    }
    &__title {
      font-size: var(--step-2);
      font-weight: bold;
      line-height: 1.305;
      margin-inline-start: var(--space);
      text-wrap: balance;
    }
    &__more {
      display: inline-block;
      margin-inline-start: var(--space);
      @include label;
    }
  }

  .list {
    display: flex;
    gap: calc(var(--space) + 0.5em);
    overflow-x: auto;
    padding-bottom: 0.5em;
    scrollbar-width: none;
    scroll-snap-type: x mandatory;
    scroll-padding-left: var(--space);
    scrollbar-width: none;
    &::-webkit-scrollbar {
      -webkit-appearance: none;
    }
  }
  .article {
    scroll-snap-align: start;
    scroll-snap-stop: normal;
    &:first-child {
      margin-inline-start: var(--space);
    }
    &:last-child {
      margin-inline-end: var(--space--large);
    }
    @include depth(0.5em);
    &__item {
      display: flex;
      flex-direction: column;
      gap: var(--space);
      height: 100%;
      padding: var(--space--small);
      width: 15rem;
    }
    &__title {
      font-weight: bold;
      line-height: 1.304;
      text-wrap: balance;
    }
    &__author {
      font-size: var(--step--1);
      margin-block-start: auto;
      margin-inline-start: auto;
      text-align: inline-end;
    }
  }
</style>
