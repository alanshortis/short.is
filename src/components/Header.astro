---
import { Clock, Logo } from './';
---

<header class="header">
  <a href="/">
    <Logo />
    <span class="header__title">Home page</span>
  </a>
  <Clock />
</header>

<style lang="scss">
  @use '../styles/mixins' as *;
  .header {
    align-items: center;
    display: flex;
    grid-column: 1 / -1;
    justify-content: space-between;
    padding: var(--step-5) 0;
    &__title {
      @include visually-hidden;
    }
  }
</style>
