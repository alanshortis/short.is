---
import { SchemeToggle } from './';

const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__links">
    <a href="/writing.xml">RSS</a>
    <a href="https://bsky.app/profile/short.is" target="_blank" rel="noopener noreferrer">Bluesky</a>
    <a href="https://www.cosmos.so/short.is" target="_blank" rel="noopener noreferrer">Cosmos</a>
  </div>
  <SchemeToggle />
</footer>

<style lang="scss">
  @use '../styles/mixins' as *;
  .footer {
    align-items: flex-end;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space--large);
    justify-content: space-between;
    padding: var(--space--large);
    @include fixed-width;
    @include small {
      padding-block: var(--space--large);
      padding-inline: var(--space);
    }
    &__links {
      display: flex;
      gap: 2ch;
      @include label;
    }
    &__title {
      @include visually-hidden;
    }
  }
</style>
