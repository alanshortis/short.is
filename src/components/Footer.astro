---
import Logo from './Logo.astro';
import { SchemeToggle } from './';
---

<footer class="footer">
  <Logo />
  <SchemeToggle />
</footer>

<style lang="scss">
  .footer {
    --safe-area-inset-bottom: env(safe-area-inset-bottom);

    align-items: center;
    display: flex;
    flex-wrap: wrap;
    gap: var(--step-1);
    justify-content: space-between;
    padding: var(--step-5) 0;
    @supports (padding-bottom: env(safe-area-inset-bottom)) {
      padding-bottom: calc(var(--safe-area-inset-bottom) + var(--step-5));
    }
  }
</style>
