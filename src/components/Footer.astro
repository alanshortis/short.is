---
import { SchemeToggle } from './';

const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__links">
    <p>&copy; 2019-{year} Alan Shortis</p>
    <a href="/writing.xml">RSS</a>
  </div>
  <SchemeToggle />
</footer>

<style lang="scss">
  @use '../styles/mixins' as *;
  .footer {
    align-items: flex-end;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space--large);
    justify-content: space-between;
    padding-block: var(--space--large);
    padding-inline: var(--space);
    @include fixed-width;
    &__links {
      display: flex;
      gap: var(--space);
      @include label;
    }
    &__title {
      @include visually-hidden;
    }
  }
</style>
