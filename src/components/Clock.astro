<time id="time" datetime=""></time>

<script>
  const time = document.getElementById('time');

  const setTime = () => {
    const now = new Date();

    time!.innerHTML = now.toLocaleTimeString('en-GB');
    time!.setAttribute('datetime', now.toISOString());
  };

  setInterval(() => {
    setTime();
  }, 1000);

  setTime();
</script>

<style lang="scss">
  @use '../styles/mixins' as *;

  time {
    @include label;
  }
</style>
