---
interface Props {
  date: string;
}

const { date } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('en-GB', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<time datetime={date} class="date">{formattedDate}</time>

<style lang="scss">
  @use '../styles/mixins' as *;

  .date {
    @include label;
  }
</style>
