---
layout: 'page'
title: 'Writing'
---

{% from "macros/postdate.njk" import postDate %}

{% block content %}
  <section>
    <h1>Writing</h1>
    <ul>
      {%- for post in collections.writing | reverse -%}
        <li>
          <article>
            <a href="{{ post.data.permalink }}">
              {{ postDate(post.data.date) }}
              <h2>{{ post.data.title }}</h2>
              <p>{{ post.data.intro }}</p>
            </a>
          </article>
        </li>
      {%- endfor %}
    </ul>
  </section>
{% endblock %}
