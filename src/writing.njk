---
layout: 'page'
title: 'Writing'
---

{% from "macros/postdate.njk" import postDate %}

{% block content %}
  <section>
    <h1>Writing</h1>
    <ul class="writing">
      {%- for post in collections.writing | reverse -%}
        <li class="writing__post">
          <a href="{{ post.data.permalink }}">
            {{ postDate(post.data.date, post.data.updated) }}
            <h2>{{ post.data.title }}</h2>
            <p>{{ post.data.intro }}</p>
          </a>
        </li>
      {%- endfor %}
    </ul>
  </section>
{% endblock %}
