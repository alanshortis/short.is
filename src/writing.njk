<section>
  <header>
    <h1>Writing</h1>
    <a href="/feeds/writing.xml">RSS</a>
  </header>

  <ul>
    {%- for post in collections.writing | reverse -%}
      <li>
        <article>
          <a href="{{ post.data.permalink }}">
            {%- set postDate = post.data.date %}
            {%- set withNewLabel = true %}
            {% include 'postdate.njk' %}
            <h2>{{ post.data.title }}</h2>
            <p>{{ post.data.intro }}</p>
          </a>
        </article>
      </li>
    {%- endfor %}
  </ul>
</section>
